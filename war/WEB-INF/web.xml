<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>rateItServlet</servlet-name>
		<servlet-class>it.rate.server.RateItServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>rateItServlet</servlet-name>
		<url-pattern>/rateit/rate</url-pattern>
	</servlet-mapping>

	<!-- Queue Servlets -->
	<servlet>
		<servlet-name>CreateRatingTaskServlet</servlet-name>
		<servlet-class>it.rate.workload.CreateRatingTaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RatingExecutionServlet</servlet-name>
		<servlet-class>it.rate.workload.RatingExecutionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateRatingTaskServlet</servlet-name>
		<url-pattern>/queue/createratingtasks</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RatingExecutionServlet</servlet-name>
		<url-pattern>/queue/ratingexecution</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CreateTopUrlsTaskServlet</servlet-name>
		<servlet-class>it.rate.workload.CreateTopUrlsTaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FetchTopUrlsServlet</servlet-name>
		<servlet-class>it.rate.workload.FetchTopUrlsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateTopUrlsTaskServlet</servlet-name>
		<url-pattern>/queue/createurltasks</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FetchTopUrlsServlet</servlet-name>
		<url-pattern>/queue/fetchtopurls</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CreateTopHostsTaskServlet</servlet-name>
		<servlet-class>it.rate.workload.CreateTopHostsTaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FetchTopHostsServlet</servlet-name>
		<servlet-class>it.rate.workload.FetchTopHostsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateTopHostsTaskServlet</servlet-name>
		<url-pattern>/queue/createhoststasks</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FetchTopHostsServlet</servlet-name>
		<url-pattern>/queue/fetchtophosts</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>queue</web-resource-name>
			<url-pattern>/queue/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

	<!-- Cron Job Servlet -->
	<servlet>
		<servlet-name>calculatetop</servlet-name>
		<servlet-class>it.rate.server.CronJobImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>calculatetop</servlet-name>
		<url-pattern>/cron/calculatetop</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>RateIt.html</welcome-file>
	</welcome-file-list>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>cronjob</web-resource-name>
			<url-pattern>/cron/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

</web-app>
